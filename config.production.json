{
    "database": {
        "client": "sqlite3",
        "connection": {
            "filename": "content/data/ghost.db"
        },
        "debug": false
    },
    "paths": {
        "contentPath": "content/"
    },
    "storage": {
        "active": "ghost-azure-storage",
        "ghost-azure-storage": {
          "connectionString": "YourConnectionStringHere",
          "container": "YourOptionalContainerName",
          "useHttps": "true"
        }
      },
    "caching": {
		"frontend": {
			"maxAge": 600
		}
	}
}
